@model web1.ViewModels.Products.IndexViewModel;

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<div class="row">
    @foreach(var product in Model.Products)
    {
        <div class="col-xs-4">
            <div class="thumbnail">
                <img src="@product.ImageURL" alt="@product.Name" />
                <div class="caption">
                    <h3>@product.Name</h3>
                    <button class="btn btn-primary">Details</button>
                </div>
            </div>
        </div>
    }
</div>

